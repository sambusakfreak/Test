    
@model Inputs

@{
   
}   


<form action="" method="POST">
<div class="container" style="margin-top:40px">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4" id="todup">
            
        
                <div class="panel panel-default"> 
                    <div class="panel-heading">
                        <strong class="text-center">Input Block</strong>
                    </div>
                    
                 
                        <div class="panel-body">   
                            <fieldset>
                                <div class="row">
                                    <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                        <div class="form-group">
                                            <label><strong>New Input</strong></label>
                                            <div class="input-group">
                                                <span class="input-group-addon">

                                                    <i class="glyphicon glyphicon-user"></i>
                                                </span>
                                                <input asp-for="@Model.Data" placeholder="Data" autofocus="" class="form-control" value=""/>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="glyphicon glyphicon-lock"></i>
                                                </span>
                                                <select class="form-control" asp-for="@Model.Datatype" asp-items="@Model.Types">
                                                    <option disabled="">Select</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </div>   <!--To duplicate-->

                    

                    <div class="panel-footer ">
                        <p></p>
                    </div>
                </div>  
            

            



            <hr/>
            <div class="text-center">
                <div class="btn"><button class="btn btn-success add_form_field" type="button" onclick=""> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> </button>
                </div>
                <div class="btn"><button class="btn btn-danger" type="button" onclick=""> <span class="glyphicon glyphicon-minus" aria-hidden="true"></span> </button>
                </div>
            </div>
            <hr/>
            <input type="submit" class="btn btn-lg btn-primary btn-block" value="Search">
        </div>
        </div>
    </div>
</form>




<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
        <hr /><br />
        
        @try
        {
            for (int i = 0; i < Model.Data.Count; i++)
             {
                 <div class="panel panel-default">
            

                     <div class="panel-heading">
                         <strong class="text-center">@Model.Datatype[i]</strong>
                     </div>
                
                     <div class="panel-body">
                         <p>@Model.Data[i]</p>
                     </div>
                 </div>
             }
        }
        catch (Exception e)
        {
            <p>Cant calc Data Count</p>
        }
        
       


        
        
        

    </div>
</div>



<style>
    .add_form_field
    
    .panel-heading {
        padding: 5px 15px;
    }

    .panel-footer {
        padding: 1px 15px;
        color: #A0A0A0;
    }
</style>


